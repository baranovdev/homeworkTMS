<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HW3.ThirdHomeworkActivity">

    <LinearLayout
        android:id="@+id/first_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/first_region_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D14646"
            android:gravity="center"
            android:text="@string/minsk_region"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="@string/wheat"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="@string/rye"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="@string/oats"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/first_region_wheat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:text="@string/null_string"
                android:gravity="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/first_region_rye"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:text="@string/null_string"
                android:gravity="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/first_region_oats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:text="@string/null_string"
                android:gravity="center"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/third_region"
        app:layout_constraintTop_toBottomOf="@+id/first_region"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/second_region_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D14646"
            android:gravity="center"
            android:text="@string/vitebsk_region"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="@string/wheat"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="@string/rye"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="@string/oats"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/second_region_wheat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:gravity="center"
                android:text="@string/null_string"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/second_region_rye"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:gravity="center"
                android:text="@string/null_string"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/second_region_oats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:gravity="center"
                android:text="@string/null_string"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/third_region_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D14646"
            android:gravity="center"
            android:text="@string/gomel_region"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="@string/wheat"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="@string/rye"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:gravity="center"
                android:text="@string/oats"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/third_region_wheat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:gravity="center"
                android:text="@string/null_string"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/third_region_rye"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:gravity="center"
                android:text="@string/null_string"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/third_region_oats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:gravity="center"
                android:text="@string/null_string"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>